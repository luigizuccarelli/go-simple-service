{
  "project": "Golang Simple Microservice",
  "metainfo": "Author LMZ 03/2020",
  "workdir": "work",
  "scm": "git@github.com:luigizuccarelli/golang-simple-service",
	"stages": [
		{
      "id" : 1,
      "name": "Git check",
      "exec": "ls",
      "wait": 5,
      "skip": false,
			"commands": [
        "-la"
      ]
    },
    {
      "id" : 2,
      "name": "Clean",
      "exec": "rm",
      "wait": 5,
      "skip": false,
			"commands": [
        "-rf",
        "microservice"
      ]
    },
    {
      "id" : 3,
      "name": "Test",
      "exec": "make",
      "wait": 5,
      "skip": true,
			"commands": [
        "test"
      ]
    },
    {
      "id" : 4,
      "name": "Cover",
      "exec": "make",
      "wait": 5,
      "skip": true,
			"commands": [
        "cover"
      ]
    },
    {
      "id" : 5,
      "name": "Compile",
      "exec": "go",
      "wait": 10,
      "skip": false,
			"commands": [
        "build",
        "-o",
        "microservice"
      ]
    },
    {
      "id" : 6,
      "name": "Container",
      "exec": "podman",
      "wait": 5,
      "skip": true,
			"commands": [
        "build",
        "-t",
        "docker.io/lzuccarelli/golang-simple:1.13.1",
        "."
      ]
    },
    {
      "id" : 7,
      "name": "Deploy",
      "exec": "./microservice",
      "wait": 5,
      "skip": false,
      "replicas" : 3,
      "service": "golang-simple",
      "envars": [
        {
          "name":"SERVER_PORT",
          "value": "9003"
        },
        {
          "name":"LOG_LEVEL",
          "value":"trace"
        },
        {
          "name":"NAME",
          "value":"golang-simple"
        },
        {
          "name":"VERSION",
          "value":"1.0.1"
        }
      ]
    }
  ]
}
